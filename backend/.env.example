# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=terrace
DATABASE_PASSWORD=terrace_dev_password
DATABASE_NAME=terrace
DATABASE_URL=postgresql://terrace:terrace_dev_password@localhost:5432/terrace

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=facts

# RAG Service Configuration
RAG_SERVICE_URL=http://localhost:8001
RAG_SERVICE_ENABLED=true

# Embedding Provider Configuration
# Valid options: local, openai, claude, ollama
EMBEDDING_PROVIDER=local

# Provider-specific settings (uncomment as needed)
# OpenAI
# OPENAI_API_KEY=sk-...

# Claude/Anthropic
# ANTHROPIC_API_KEY=sk-ant-...

# Ollama
# OLLAMA_HOST=http://localhost:11434

# Local model settings
LOCAL_MODEL_NAME=all-MiniLM-L6-v2
